---
let active = ''
---

<nav class="navbar">
	<a id="index" href="/">Home</a>
	<a id="projects" href="/projects" class="deactivated">Projects</a>
	<a id="resources" href="/resources">Resources</a>
	<a id="about" href="/about">About</a>
</nav>

<style>
	.navbar {
		display: flex;
		flex-direction: column;
		gap: var(--space-xs);
	}
	a {
		font-family: var(--header-font);
		font-size: var(--space-lg);
	}

	a:hover {
		text-decoration: underline;
	}

	a.deactivated {
		color: var(--code-shade);
		text-decoration: line-through;
		pointer-events: none;
	}

	@media screen and (max-width: 600px) {
		.navbar {
			flex-direction: row;
			flex-wrap: wrap;
			gap: var(--space-sm);
			margin-top: var(--space-base);
		}

		.navbar a {
			color: var(--code-shade);
		}
	}
</style>