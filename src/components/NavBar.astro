<style>
	.navbar {
		display: flex;
		flex-direction: column;
		gap: var(--pd05);
	}
	a {
		font-family: var(--header-font);
		font-size: clamp(var(--pd125), 4vw, var(--pd175));
	}

	a:hover {
		text-decoration: underline;
	}

	@media screen and (max-width: 600px) {
		.navbar {
			flex-direction: row;
			flex-wrap: wrap;
			gap: var(--pd075);
			margin-top: var(--pd1);
		}

		.navbar a {
			color: var(--code-shade);
		}
	}
</style>