---
import LogoHeader from '../components/LogoHeader.astro'
import NavBar from '../components/NavBar.astro'

let {title} = Astro.props
---

<html>
<head>
	<meta charset="UTF-8">
	<title>{title}</title>
	<link rel="stylesheet" href={Astro.resolve('../styles/global.css')}>
</head>
<body>
	<div class="layout">
		<aside>
			<LogoHeader/>
			<NavBar/>
		</aside>
		<main>
			<slot/>
		</main>
	</div>
</body>
</html>

<style>
	.layout {
		display: flex;
		width: 100%;
		height: 100vh;
	}

	@media screen and (max-width: 600px) {
		.layout {
			flex-wrap: wrap;
		}
	}

	aside, main {
		flex-basis: 20%;
		padding: clamp(var(--pd15), 4vw, var(--pd2));
	}

	aside {
		flex-grow: 1;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
	}

	main {
		flex-grow: 2;
		text-align: right;
	}
</style>