---
import LogoHeader from '../components/LogoHeader.astro'
import NavBar from '../components/NavBar.svelte'
import '../styles/global.css'

let {title} = Astro.props
---

<html>
<head>
	<meta charset="UTF-8">
	<meta content="width=device-width, initial-scale=1" name="viewport" />
	<link rel="shortcut icon" href="favicon.png" type="image/x-icon">
	<title>{title}</title>
</head>
<body>
	<div class="layout">
		<aside>
			<header>
				<LogoHeader/>
				<NavBar currentPath={Astro.url.pathname} />
			</header>
			<!-- <slot name="corner-info"/> -->
		</aside>
		<main>
			<slot/>
		</main>
		<img class="main-image" src="/images/fruitstack2.png" alt="">
	</div>
</body>
</html>

<style>
	.layout {
		display: flex;
		width: 100%;
		height: 100vh;
	}

	@media screen and (max-width: 600px) {
		.layout {
			flex-wrap: wrap;
			height: auto;
		}
	}

	aside, main {
		padding: var(--space-size-lg);
	}

	aside {
		flex-grow: 1;
		display: flex;
		flex-direction: column;
		justify-content: space-between;
	}

	main {
		flex-grow: 2;
		text-align: right;
		overflow-y: auto;
	}

	.main-image {
		position: absolute;
		image-rendering: pixelated;
		image-rendering: crisp-edges;
		z-index: -3;
		bottom: 10%;
		width: 400px;
	}

	@media screen and (max-width: 600px) {
		main {
			text-align: left;
		}
		
		.main-image {
			width: 200px;
			opacity: 0.5;
			right: 10%;
		}
	}

	@media screen and (min-width: 601px) {
		aside {
			gap: var(--space-size-md);
			flex-basis: 20%;
		}

		main {
			flex-basis: 20%;
		}

		.main-image {
			left: 10%;
		}
	}
</style>